    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug with OpenOCD",
            "cwd": "${workspaceRoot}",
            "executable": "${workspaceRoot}/build/App-StepUp/StepUp.elf",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "openocd",
            "device": "Pico2040",
            "runToEntryPoint": "main",
            "showDevDebugOutput": "raw",
            "openOCDLaunchCommands": [
                "adapter speed 5000"
            ],
            "osx": {
                "configFiles": [
                    "interface/cmsis-dap.cfg",
                    "target/rp2040.cfg"
                ],
                "searchDir": [
                    "${workspaceRoot}/openocd/tcl"
                ],
            },
            "windows": {
                "configFiles": [
                    "C:\\Program Files\\Raspberry Pi\\Pico SDK v1.5.0\\openocd\\scripts\\interface\\cmsis-dap.cfg",
                    "C:\\Program Files\\Raspberry Pi\\Pico SDK v1.5.0\\openocd\\scripts\\target\\rp2040.cfg"
                ],
                "searchDir": [
                    "C:\\Program Files\\Raspberry Pi\\Pico SDK v1.5.0\\openocd\\tcl"
                ],
            },
            "svdFile": "${workspaceRoot}/pico-sdk/src/rp2040/hardware_regs/rp2040.svd",
        },
        {
            "name": "Upload only",
            "cwd": "${workspaceRoot}",
            "executable": "${workspaceRoot}/build/App-StepUp/StepUp.elf",
            "request": "launch",
            "type": "cortex-debug",
