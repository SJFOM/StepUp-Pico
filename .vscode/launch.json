            "device": "Pico2040",
            "runToEntryPoint": "main",
            "showDevDebugOutput": "raw",
            "openOCDLaunchCommands": [
                "adapter speed 5000"
            ],
            "osx": {
                "configFiles": [
                    "interface/cmsis-dap.cfg",
                    "target/rp2040.cfg"
                ],
                "searchDir": [
                    "${workspaceRoot}/openocd/tcl"
                ],
            },
            "windows": {
                "configFiles": [
                    "C:\\Program Files\\Raspberry Pi\\Pico SDK v1.5.0\\openocd\\scripts\\interface\\cmsis-dap.cfg",
                    "C:\\Program Files\\Raspberry Pi\\Pico SDK v1.5.0\\openocd\\scripts\\target\\rp2040.cfg"
                ],
                "searchDir": [
                    "C:\\Program Files\\Raspberry Pi\\Pico SDK v1.5.0\\openocd\\tcl"
                ],
            },
            "svdFile": "${workspaceRoot}/pico-sdk/src/rp2040/hardware_regs/rp2040.svd",
            "postLaunchCommands": [
