    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug with OpenOCD",
            "cwd": "${workspaceRoot}",
            "executable": "${workspaceRoot}/build/Application/App-StepUp/StepUp.elf",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "openocd",
            "device": "Pico2040",
            "runToEntryPoint": "main",
            "showDevDebugOutput": "raw",
            "openOCDLaunchCommands": ["adapter speed 5000"],
            "configFiles": ["interface/cmsis-dap.cfg", "target/rp2040.cfg"],
            "searchDir": ["${workspaceRoot}/openocd/tcl"],
            "svdFile": "${workspaceRoot}/pico-sdk/src/rp2040/hardware_regs/rp2040.svd",
        }
    ]
}