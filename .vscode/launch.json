{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug with OpenOCD",
            "cwd": "${workspaceFolder}",
            "executable": "${workspaceFolder}/build/App-StepUp/StepUp.elf",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "openocd",
            "device": "Pico2040",
            "runToEntryPoint": "main",
            "debuggerArgs": [
                "-d",
                "${workspaceFolder}"
            ],
            "rtos": "auto",
            "liveWatch": {
                "enabled": false,
                "samplesPerSecond": 4
            },
            "showDevDebugOutput": "raw",
            "openOCDLaunchCommands": [
                "adapter speed 5000"
            ],
            "osx": {
                "configFiles": [
                    "interface/cmsis-dap.cfg",
                    "target/rp2040.cfg"
                ],
                "searchDir": [
                    "${workspaceFolder}/openocd/tcl"
                ],
                "svdFile": "${workspaceFolder}/pico-sdk/src/rp2040/hardware_regs/rp2040.svd",
            },
            "windows": {
                "configFiles": [
                    "${env:PICO_INSTALL_PATH}\\openocd\\scripts\\interface\\cmsis-dap.cfg",
                    "${env:PICO_INSTALL_PATH}\\openocd\\scripts\\target\\rp2040.cfg"
                ],
                "searchDir": [
                    "${env:PICO_INSTALL_PATH}\\openocd\\tcl"
                ],
                "svdFile": "${workspaceFolder}\\pico-sdk\\src\\rp2040\\hardware_regs\\rp2040.svd",
            },
            "linux": {
                "configFiles": [
                    "${env:PICO_INSTALL_PATH}/openocd/scripts/interface/cmsis-dap.cfg",
                    "${env:PICO_INSTALL_PATH}/openocd/scripts/target/rp2040.cfg"
                ],
                "searchDir": [
                    "${env:PICO_INSTALL_PATH}/openocd/tcl"
                ],
                "svdFile": "${workspaceFolder}/pico-sdk/src/rp2040/hardware_regs/rp2040.svd",
            },
        },
        {
            "name": "Upload only",
            "cwd": "${workspaceFolder}",
            "executable": "${workspaceFolder}/build/App-StepUp/StepUp.elf",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "openocd",
            "device": "Pico2040",
            "runToEntryPoint": "main",
            "showDevDebugOutput": "raw",
            "openOCDLaunchCommands": [
                "adapter speed 5000"
            ],
            "osx": {
                "configFiles": [
                    "interface/cmsis-dap.cfg",
                    "target/rp2040.cfg"
                ],
                "searchDir": [
                    "${workspaceFolder}/openocd/tcl"
                ],
            },
            "windows": {
                "configFiles": [
                    "${env:PICO_INSTALL_PATH}\\openocd\\scripts\\interface\\cmsis-dap.cfg",
                    "${env:PICO_INSTALL_PATH}\\openocd\\scripts\\target\\rp2040.cfg"
                ],
                "searchDir": [
                    "${env:PICO_INSTALL_PATH}\\openocd\\tcl"
                ],
            },
            "linux": {
                "configFiles": [
                    "${env:PICO_INSTALL_PATH}/openocd/scripts/interface/cmsis-dap.cfg",
                    "${env:PICO_INSTALL_PATH}/openocd/scripts/target/rp2040.cfg"
                ],
                "searchDir": [
                    "${env:PICO_INSTALL_PATH}/openocd/tcl"
                ],
            },
            "svdFile": "${workspaceFolder}/pico-sdk/src/rp2040/hardware_regs/rp2040.svd",
            "postLaunchCommands": [
                "monitor reset run",
                "detach"
            ],
        }
    ]
}